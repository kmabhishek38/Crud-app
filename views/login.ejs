        <div class=" playbackSet row pt-3 ">
            <video class="video1" autoplay muted loop>
                <source src="img/people_-_84973 (1080p).mp4" type="video/mp4">
            </video>
        </div>
        
        <div class="formSet    row justify-content-center"> 
            <h1 class="heading pt-5">Log In</h1>
           
            <form id="LoginPage" action="/api/login" method="POST">
                
            
                <div class=" ">  
                    

                    <div class="boxsizing ">
                        <label for="email">
                            E-mail
                        </label><br>
                        <input type="email" id="email" name="email"class="boxsizing" placeholder="Enter your e-mail" required>
                        
                        <div id="hello" style="color: red; padding-left: 80px; font-size: 16px;" ></div>
                    </div>  

                    
                    
                    
                      
                    <div class=" boxsizing ">
                        <label for="password">
                            Password
                        </label>
                        <input type="password"   name="password" id="password" value="" placeholder="Password">
                        
                    </div>  
                       
                
                    <small id="password_error" class="text-secondary"  style="color: red !important; display: none; padding-left: 90px;">
                        Password must be at least 5 characters long
                    </small> 

                   <div class="buttt pt-3">
                        <button  type="submit">
                            Submit 
                        </button>
                    </div>
                </div>

                <% if (error_msg){%>
                    <p id="error-message" style="color: red;"><%=error_msg%></p>
                <%}%>
                
            </form>
        </div>   
        
    </div></div>


